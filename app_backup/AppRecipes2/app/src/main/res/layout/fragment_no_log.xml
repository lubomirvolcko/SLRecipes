<?xml version="1.0" encoding="utf-8"?>

<!-- main layout -->
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activities.NoLog_activity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/top_background_2"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:id="@+id/content_main">

        <!-- view of logo -->
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="249dp"
                app:srcCompat="@drawable/logo"
                android:id="@+id/entry_logo"/>
        <!-- view of logo -->

        <!-- search layout -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignBottom="@id/entry_logo"
                android:id="@+id/layout_search"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/entry_logo"
                android:layout_marginBottom="-55dp">

            <EditText
                    android:layout_width="190dp"
                    android:layout_height="42dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/main_search_txt_bg"
                    android:id="@+id/txtMainSearch"
                    android:hint="lasagne, lamb, ..."
                    android:textSize="14sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_below="@+id/layout_search"
                    android:fontFamily="@font/opensans_italic"/>

            <Button
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:drawableTop="@drawable/ic_search_btn"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/btnMainSearch"
                    android:onClick="hideKeyboard"/>

        </LinearLayout>
        <!-- search layout -->

        <!-- button login -->
        <Button
                android:layout_width="240dp"
                android:layout_height="42dp"
                android:id="@+id/btnLogin"
                android:layout_marginTop="63dp"
                android:background="@drawable/btn_bg"
                android:text="Sign In"
                android:textSize="15sp"
                android:textColor="@color/nav_font"
                android:fontFamily="@font/opensans_bold"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/layout_search"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:onClick="hideKeyboard"/>
        <!-- button login -->

        <!-- button register -->
        <Button
                android:layout_width="240dp"
                android:layout_height="42dp"
                android:id="@+id/btnRegister"
                android:layout_marginTop="7dp"
                android:layout_centerHorizontal="true"
                android:text="Sign Up"
                android:textSize="15sp"
                android:textColor="#ac3e25"
                android:background="@drawable/btn_bg_2"
                android:layout_below="@+id/btnLogin"
                android:fontFamily="@font/opensans_bold"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"/>
        <!-- button register -->

        <!-- motto -->
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                app:srcCompat="@drawable/motto"
                android:id="@+id/imageView5"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/btnRegister"/>
        <!-- motto -->

        <!-- Login view -->
        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
                android:background="@drawable/login_bg"
                android:padding="20dp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_gravity="center|top"
                android:id="@+id/login_view">

            <!-- button close login view -->
            <Button
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/btnCloseLogin"
                    android:drawableTop="@drawable/ic_close_black_24dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="end"
                    android:onClick="hideKeyboard"/>
            <!-- button close login view -->

            <!-- person img -->
            <ImageView
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    app:srcCompat="@drawable/login_person"
                    android:id="@+id/login_person"
                    tools:ignore="VectorDrawableCompat"
                    android:layout_gravity="center"/>
            <!-- person img -->

            <!-- text username -->
            <EditText
                    android:layout_width="245dp"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/main_search_txt_bg"
                    android:id="@+id/txtUsername"
                    android:hint="Username"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/opensans_italic"/>
            <!-- text username -->

            <!-- text password -->
            <EditText
                    android:layout_width="245dp"
                    android:layout_height="40dp"
                    android:background="@drawable/main_search_txt_bg"
                    android:id="@+id/txtPassword"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/opensans_italic"/>
            <!-- text password -->

            <!-- button login -->
            <Button
                    android:layout_width="245dp"
                    android:layout_height="42dp"
                    android:id="@+id/btnLoginEnter"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_bg"
                    android:text="Sign In"
                    android:textColor="@color/nav_font"
                    android:fontFamily="@font/opensans_bold"
                    android:layout_gravity="center"/>
            <!-- button login -->

            <!-- button forgot password -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Forgot password"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/nav_font"
                    android:textAlignment="center"
                    android:fontFamily="@font/opensans_italic"/>
            <!-- button forgot password -->

            <!-- horizontal line -->
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#c0c0c0"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="7dp"/>
            <!-- horizontal line -->


            <!-- Login with google -->
            <LinearLayout
                    android:layout_width="245dp"
                    android:layout_height="40dp"
                    android:background="#3B5998"
                    android:id="@+id/login_fb"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        app:srcCompat="@drawable/fb"
                        tools:ignore="VectorDrawableCompat"
                        android:layout_gravity="center"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Continue with"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/nav_font"
                        android:textAlignment="center"
                        android:fontFamily="@font/opensans_italic"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Facebook"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/nav_font"
                        android:textAlignment="center"
                        android:fontFamily="@font/opensans_bolditalic"/>

            </LinearLayout>
            <!-- Login with facebook -->

            <!-- Login with google -->
            <LinearLayout
                    android:layout_width="245dp"
                    android:layout_height="40dp"
                    android:background="#518EF8"
                    android:id="@+id/login_google"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        app:srcCompat="@drawable/google"
                        tools:ignore="VectorDrawableCompat"
                        android:layout_gravity="center"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Continue with"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/nav_font"
                        android:textAlignment="center"
                        android:fontFamily="@font/opensans_italic"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Google"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/nav_font"
                        android:textAlignment="center"
                        android:fontFamily="@font/opensans_bolditalic"/>

            </LinearLayout>
            <!-- Login with google -->

        </LinearLayout>
        <!-- Login view -->

        <!-- Register view -->
        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="@drawable/login_bg"
                android:padding="20dp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_gravity="center|top"
                android:id="@+id/register_view">

            <!-- button close register view -->
            <Button
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/btnCloseRegister"
                    android:drawableTop="@drawable/ic_close_black_24dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="end"/>
            <!-- button close register view -->

            <!-- image person -->
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/login_person"
                    tools:ignore="VectorDrawableCompat"
                    android:layout_marginTop="-15dp"
                    android:layout_gravity="center"/>
            <!-- image person -->

            <!-- text username -->
            <EditText
                    android:layout_width="245dp"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/main_search_txt_bg"
                    android:id="@+id/txtUsername_reg"
                    android:hint="Username"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/opensans_italic"/>
            <!-- text username -->

            <!-- text password1 -->
            <EditText
                    android:layout_width="245dp"
                    android:layout_height="40dp"
                    android:background="@drawable/main_search_txt_bg"
                    android:id="@+id/txtPassword1"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/opensans_italic"/>
            <!-- text password1 -->

            <!-- text password2 -->
            <EditText
                    android:layout_width="245dp"
                    android:layout_height="40dp"
                    android:background="@drawable/main_search_txt_bg"
                    android:id="@+id/txtPassword2"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/opensans_italic"/>
            <!-- text password2 -->

            <!-- text Email -->
            <EditText
                    android:layout_width="245dp"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/main_search_txt_bg"
                    android:id="@+id/txtEmail"
                    android:hint="E-mail"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/opensans_italic"/>
            <!-- text Email -->

            <!-- checkbox Confirm Terms & Conditions -->
            <CheckBox
                    android:text="Confirm Terms and Conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/termsAndConditions"
                    android:textColor="@color/nav_font"
                    android:textSize="12sp"
                    android:layout_marginLeft="25dp"/>
            <!-- checkbox Confirm Terms & Conditions -->

            <!-- checkbox Sending News -->
            <CheckBox
                    android:text="Sending news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sendNews"
                    android:textColor="@color/nav_font"
                    android:textSize="12sp"
                    android:layout_marginLeft="25dp"/>
            <!-- checkbox Sending News -->

            <!-- button register -->
            <Button
                    android:layout_width="245dp"
                    android:layout_height="42dp"
                    android:id="@+id/btnRegEnter"
                    android:background="@drawable/btn_bg"
                    android:text="Sign Up"
                    android:textColor="@color/nav_font"
                    android:fontFamily="@font/opensans_bold"
                    android:layout_gravity="center"/>
            <!-- button register -->

            <!-- horizontal line -->
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#c0c0c0"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="7dp"/>
            <!-- horizontal line -->

            <!-- Register with facebook -->
            <LinearLayout
                    android:layout_width="245dp"
                    android:layout_height="40dp"
                    android:background="#3B5998"
                    android:id="@+id/reg_fb"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        app:srcCompat="@drawable/fb"
                        tools:ignore="VectorDrawableCompat"
                        android:layout_gravity="center"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Continue with"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/nav_font"
                        android:textAlignment="center"
                        android:fontFamily="@font/opensans_italic"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Facebook"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/nav_font"
                        android:textAlignment="center"
                        android:fontFamily="@font/opensans_bolditalic"/>

            </LinearLayout>
            <!-- Register with facebook -->

            <!-- Register with google -->
            <LinearLayout
                    android:layout_width="245dp"
                    android:layout_height="40dp"
                    android:background="#518EF8"
                    android:id="@+id/reg_google"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        app:srcCompat="@drawable/google"
                        tools:ignore="VectorDrawableCompat"
                        android:layout_gravity="center"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Continue with"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/nav_font"
                        android:textAlignment="center"
                        android:fontFamily="@font/opensans_italic"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Google"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/nav_font"
                        android:textAlignment="center"
                        android:fontFamily="@font/opensans_bolditalic"/>

            </LinearLayout>
            <!-- Register with google -->

        </LinearLayout>
        <!-- Register view -->


    </RelativeLayout>

</RelativeLayout>
        <!-- main layout -->
