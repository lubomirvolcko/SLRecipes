<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/category_img">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/category_view_red_bg"
            android:paddingLeft="20dp"
            android:gravity="center">

        <TextView
                android:id="@+id/categoryName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Category Name"
                android:textColor="@color/nav_font"
                android:fontFamily="@font/opensans_semibolditalic"
                android:textSize="25sp"
                android:layout_marginTop="14dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/category_view_red_bg"
            android:paddingLeft="20dp"
            android:gravity="center">

        <TextView
                android:id="@+id/numOfRecipes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="123 Recipes"
                android:textColor="@color/nav_font"
                android:fontFamily="@font/opensans_semibolditalic"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

    </LinearLayout>

</LinearLayout>